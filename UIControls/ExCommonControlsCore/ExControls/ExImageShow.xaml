<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ExCommonControlsCore.ExControls">


    <Style  TargetType="{x:Type local:ExImageShow}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ExImageShow}">
                    <Canvas x:Name="root">
                        <Canvas.Background>
                            <ImageBrush ImageSource="{Binding ImageSource,RelativeSource={RelativeSource AncestorType=local:ExImageShow,Mode=FindAncestor}}" 
                                        Stretch="Uniform"/>
                        </Canvas.Background>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
